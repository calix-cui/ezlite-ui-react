{
  "name": "ezlite-react",
  "version": "0.0.2",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "compile:esm": "npx tsc -p tsconfig.build.json --module ESNext --outDir dist/esm",
    "compile:cjs": "npx tsc -p tsconfig.build.json --module commonjs --outDir dist/cjs",
    "compile:umd": "npx webpack",
    "compile:style": "node compile.mjs",
    "compile": "npm run compile:esm && npm run compile:cjs && npm run compile:umd && npm run compile:style",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "unpkg": "./dist/umd/ezlite-react.js",
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "dependencies": {
    "@storybook/jest": "^0.2.3",
    "@storybook/testing-library": "^0.2.2",
    "classnames": "^2.5.1",
    "dayjs": "^1.11.12",
    "lodash-es": "^4.17.21",
    "react-transition-group": "^4.4.5"
  },
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^1.9.0",
    "@storybook/addon-essentials": "^8.3.0",
    "@storybook/addon-interactions": "^8.3.0",
    "@storybook/addon-links": "^8.3.0",
    "@storybook/addon-onboarding": "^8.3.0",
    "@storybook/blocks": "^8.3.0",
    "@storybook/react": "^8.3.0",
    "@storybook/react-vite": "^8.3.0",
    "@storybook/test": "^8.3.0",
    "@types/lodash-es": "^4.17.12",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/react-transition-group": "^4.4.10",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "@vitejs/plugin-react": "^4.3.1",
    "css-loader": "^7.1.2",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "eslint-plugin-storybook": "^0.8.0",
    "glob": "^11.0.0",
    "sass": "^1.77.8",
    "sass-loader": "^16.0.1",
    "storybook": "^8.3.0",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.2.2",
    "vite": "^5.3.4",
    "webpack": "^5.93.0",
    "webpack-cli": "^5.1.4"
  }
}
